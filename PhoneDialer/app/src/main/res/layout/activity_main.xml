<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/phoneEdit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=""
        android:textSize="22dp"
        android:layout_marginRight="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/b_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:background="@drawable/ic_delete"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp">
    </ImageButton>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="2"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="3"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="4"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="5"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="6"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="7"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="8"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="9"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="*"
            android:id="@+id/b_star"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="0"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>

        <Button
            android:id="@+id/b_diez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/styled_button"
            android:text="#"
            android:layout_margin="5dp"
            android:textSize="17dp">
        </Button>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/b_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_phone"
            android:layout_marginTop="10dp">
        </ImageButton>

        <Button
            android:id="@+id/b_send"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="90dp"
            android:text="Send to Contacts Manager"
            android:textAllCaps="false"
            android:layout_marginTop="10dp">
        </Button>

        <ImageButton
            android:id="@+id/b_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_phone_call"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/b_send"
            android:layout_marginLeft="20dp"
            >
        </ImageButton>

    </RelativeLayout>

</LinearLayout>